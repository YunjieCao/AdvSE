-# in app/views/requests/show.html.haml

%h3 Detailed information for #{@request.title}

%ul#details
  %li
    = image_tag(@request.img_url.url, alt: 'Image', style: 'height:300px;width:auto;') if @request.img_url?
  %li
    title:
    = @request.title
  %li
    Description:
    = @request.description
  %li
    Value($):
    = @request.value
  %li
    Source address:
    = @request.get_source_address.show
  %li
    Destination address:
    = @request.get_dest_address.show
  %li
    Expected Delivery Start Date:
    = @request.expected_delivery_start.strftime("%B %d, %Y")
  %li
    Expected Delivery End Date:
    = @request.expected_delivery_end.strftime("%B %d, %Y")

= link_to 'Edit', edit_request_path(@request)
= link_to 'Back to marketplace', requests_path

= form_tag task_applications_path do
  = hidden_field :request, :id
  = submit_tag 'Apply to be carrier', :class => 'btn btn-primary'