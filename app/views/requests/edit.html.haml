-# edit.html.haml using partial

%h2 Edit existing request

= form_tag request_path(@request), :method => :put, :multipart => true do

  = label :request, :title, 'Title'
  = text_field :request, 'title'

  = label :request, :description, 'Description'
  = text_field :request, 'description'

  = label :request, :value, 'Value($)'
  = text_field :request, 'value'

  = label :request, :source_addr_id, 'Source address'
  = select :request, :source_addr_id, @address

  = label :request, :dest_addr_id, 'Destination address'
  = select :request, :dest_addr_id, @address

  = label :request, :expected_delivery_start, 'Expected Delivery Start Date'
  = date_select :request, :expected_delivery_start

  = label :request, :expected_delivery_end, 'Expected Delivery End Date'
  = date_select :request, :expected_delivery_end

  = submit_tag 'Update request Info', :class => 'btn btn-primary'
