-# in app/views/task_applications/show.html.haml

%h3 Current applications of #{@request.title}

%table#applications.table.table-striped.table-hover.col-md-12
  %thead
    %tr
      %th Carrier ID
      %th Carrier Name
      %th Actions
  %tbody
    - @applications.each do |appl|
      %tr
        %td= link_to appl.carrier_id, history_rates_path(:carrier_id => appl.carrier_id)
        -#carrier id
        %td= appl.name
        %td= link_to "Pick", order_generation_path(appl.id), method: :put

= link_to 'Back to Home page', root_path
