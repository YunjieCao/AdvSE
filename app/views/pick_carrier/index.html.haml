-# in app/views/pick_carrier/show.html.haml

%h3 Current applications of #{@request.title}

%table#applications.table.table-striped.col-md-12
  %thead
    %tr
      %th ID
      %th Actions
  %tbody
    - @applications.each do |appl|
      %tr
        %td= appl.user_id
        %td
          = link_to "Pick", new_request_path(request) # TODO: Path pick a carrier

= link_to 'Back to Home page', root_path
